{
  "name": "lambal",
  "version": "0.3.1",
  "description": "A pragmatic utility library to spice up your functional style code.",
  "main": "lib/index.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "parcel build ./src/index.ts --out-dir=lib --target=node",
    "docs:build": "typedoc --out docs --exclude **/*.test.ts src && cp _config.yml docs/.",
    "docs:commit": "git add docs/. && git commit -m \"built documentation\"",
    "tsc": "tsc",
    "test": "ava src/**/*.test.ts",
    "test:watch": "ava -w src/**/*.test.ts",
    "prepare": "npm run build",
    "preversion": "npm run docs:build && npm run docs:commit",
    "postversion": "git push && git push --tags"
  },
  "author": "Michiel Kamphuis <mfk@kamphuis.eu>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^1.3.1",
    "parcel-bundler": "^1.12.3",
    "ts-node": "^8.0.3",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "fast-deep-equal": "^2.0.1"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
